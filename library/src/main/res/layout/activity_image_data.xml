<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_image_data"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/imagepicker_statusbar"
    android:fitsSystemWindows="true"
    tools:context="com.lwkandroid.imagepicker.ui.grid.view.ImageDataActivity">

    <com.lwkandroid.imagepicker.widget.ImagePickerActionBar
        android:id="@+id/acb_image_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <ViewStub
        android:id="@+id/vs_image_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/acb_image_data"
        android:layout="@layout/layout_image_data_grid"/>

</RelativeLayout>
