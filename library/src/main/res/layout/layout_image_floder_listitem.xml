<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imagepicker_floder_listitem_height"
                android:background="@drawable/imagepicker_actionbar_menu_selector"
                android:padding="@dimen/imagepicker_floder_listitem_padding">

    <ImageView
        android:id="@+id/img_floder_listitem_firstImg"
        android:layout_width="@dimen/imagepicker_floder_listitem_img_width"
        android:layout_height="@dimen/imagepicker_floder_listitem_img_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/imagepicker_floder_listitem_padding"
        android:layout_toRightOf="@+id/img_floder_listitem_firstImg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_floder_pop_listitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/imagepicker_floder_listitem_padding"
            android:textColor="@android:color/black"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_floder_pop_listitem_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_floder_pop_listitem_selected"
        android:layout_width="@dimen/imagepicker_floder_label_size"
        android:layout_height="@dimen/imagepicker_floder_label_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/imagepicker_floder_listitem_padding"
        android:src="@drawable/ck_imagepicker_grid_selected"
        android:visibility="gone"/>

</RelativeLayout>